<!DOCTYPE html>
<html>
    <head>
        <style>
        table {
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        </style>
    </head>
    <body>
        <div style="width: 85%; margin: 0 7.5%;">
            <div style="text-align: center; padding-left: 50px;">            
                <h3>Author's Report</h5>
                <table>
                <% if (con.length > 0) { %>
                    <% con.forEach(con1 => {%>
                       <tr><td><%= con1.book_id %></td><td><%= con1.bookname %></td><td><%= con1.binding %></td><td><%= con1.author_id %></td></tr>
                    <%  });%>
                <% }%>
                </table>
             </div>
        </div>
    </body>
</html>